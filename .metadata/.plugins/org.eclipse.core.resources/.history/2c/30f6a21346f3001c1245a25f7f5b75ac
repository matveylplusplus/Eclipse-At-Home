package test;

import java.util.Scanner;

public class Gen 
{
	public static void main (String[] Args)
	{
		Scanner in = new Scanner(System.in);
		
		System.out.println(upToN(3));
		
		in.close();
	}
	
	public static int upToN(int n)
	{
		if(n == 0)
			return n;
		else
			return upToN(n-1) + n;
	}
}

