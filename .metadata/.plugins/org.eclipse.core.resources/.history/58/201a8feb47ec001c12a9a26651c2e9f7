		String petType = in.next();
		System.out.println("");
		
		if(petType.equals("dog"))
		{
			int eaten = howManyCEaten();
			
		}
		else if (petType.equals("cat"))
		{
			int scratched = howManyDScratched();
		}
		else if (petType.equals("cockatiel"))
		{
			
		}
		else// no further questions
		{
			
		}
	}
	
	private static int howManyCEaten()
	{
		int eaten = 0;
		Scanner in = new Scanner(System.in);
		System.out.print("How many cats has your pet eaten?");
		eaten = in.nextInt();
		System.out.println("");
		return eaten;
	}
	
	private static int howManyDScratched()
	{
		int scratched = 0;
		Scanner in = new Scanner(System.in);
		System.out.print("How many dogs has your pet scratched?");
		scratched = in.nextInt();
		System.out.println("");
		return scratched;
	}
}

