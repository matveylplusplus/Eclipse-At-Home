package cmsc131;

public class Rational implements Comparable<Rational>
{
	int numerator;
	int denominator;
	
	public static void main(String[] args)
	{
		Rational r1 = new Rational(4, 5);
		Rational r2 = new Rational(3, 1);
		System.out.println(r1.compareTo(r2));
	}
	
	public Rational(int n, int d)
	{
		numerator = n;
		denominator = d;
	}
	
	@Override
	public int compareTo(Object other) {
		try {
			Rational compare = (Rational) other;
			if ((double) (compare.numerator / compare.denominator) > (double)(this.numerator / this.denominator))
				return 1;//argument is greater than object
			else if ((double) (compare.numerator / compare.denominator) == (double)(this.numerator / this.denominator))
				return 0;//argument is equal to object
			else
				return -1;//argument is less than object
		}
		catch(ClassCastException e){
			throw new IllegalArgumentException();
		}	
	}
}

interface Comparable <T>
{
	public int compareTo(Object other);
}
